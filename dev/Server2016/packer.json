{
    "min_packer_version": "0.12.0",
    "variables": {
      "service_name": "server2016",
      "region": "us-east-1",
      "service_version": "0.4.0",
      "env": "dev",
      "winrm_user": "Administrator",
      "winrm_password": "cdi@2468"
    },
    "builders": [{
      "name": "hyperv",
      "type": "hyperv-iso",
      "generation": "1",
      "enable_secure_boot": "false",
      "headless": "true",
      "iso_url": "https://software-download.microsoft.com/download/pr/Windows_Server_2016_Datacenter_EVAL_en-us_14393_refresh.ISO",
      "iso_checksum_type": "md5",
      "iso_checksum": "70721288BBCDFE3239D8F8C0FAE55F1F",
      "cpu": "2",
      "ram_size": "4096",
      "enable_dynamic_memory": "true",
      "communicator": "winrm",
      "winrm_port": "5986",
      "winrm_use_ssl": "true",
      "winrm_use_ntlm": "true",
      "winrm_insecure": "true",
      "winrm_username": "{{user `winrm_user`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "12h",
      "shutdown_command": "%WINDIR%\\system32\\sysprep\\sysprep.exe /unattend:A:\\Autounattend.xml /quiet /generalize /oobe /shutdown",
      "shutdown_timeout": "4h",
      "output_directory": "../../output/temp/",
      "floppy_files": [
        "Autounattend.xml",
        "ConfigureRemotingForAnsible.ps1"
      ]
    },
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "iso_url": "https://software-download.microsoft.com/download/pr/Windows_Server_2016_Datacenter_EVAL_en-us_14393_refresh.ISO",
      "iso_checksum_type": "md5",
      "iso_checksum": "70721288BBCDFE3239D8F8C0FAE55F1F",
      "guest_os_type": "Windows2016_64",
      "guest_additions_mode": "attach",
      "headless": "true",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "128" ],
        ["modifyvm", "{{.Name}}", "--cableconnected1", "on"]
      ],
      "communicator": "winrm",
      "winrm_port": "5986",
      "winrm_use_ssl": "true",
      "winrm_use_ntlm": "true",
      "winrm_insecure": "true",
      "winrm_username": "{{user `winrm_user`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "12h",
      "shutdown_command": "%WINDIR%\\system32\\sysprep\\sysprep.exe /unattend:A:\\Autounattend.xml /quiet /generalize /oobe /shutdown",
      "shutdown_timeout": "4h",
      "post_shutdown_delay": "2m",
      "output_directory": "../../output/temp/",
      "floppy_files": [
        "Autounattend.xml",
        "ConfigureRemotingForAnsible.ps1"
      ]
    }],
    "provisioners": [
      {
        "type": "powershell",
        "only": ["virtualbox"],
        "inline": [
          "certutil -addstore -f \"TrustedPublisher\" E:\\cert\\vbox-sha1.cer",
          "certutil -addstore -f \"TrustedPublisher\" E:\\cert\\vbox-sha256.cer",
          "E:\\VBoxWindowsAdditions.exe /S"
        ]
      },{
        "type": "powershell",
        "inline": [
          "[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12",
          "Invoke-WebRequest -Uri 'https://raw.githubusercontent.com/saltstack/salt-bootstrap/stable/bootstrap-salt.ps1' -OutFile 'C:/Windows/Temp/bootstrap-salt.ps1'",
          "C:\\Windows\\Temp\\bootstrap-salt.ps1 -version 2018.3.2 -pythonVersion 3 -runservice false -minion base"
        ]
      },{
        "destination": "c:/app/live/srv/",
        "source": "../../srv/",
        "type": "file"
      },{
        "destination": "c:/salt/conf/minion",
        "source": "../../etc/salt/minion.windows",
        "type": "file"
      },{
        "type": "powershell",
        "inline": [
          "C:\\salt\\salt-call state.highstate --id=base"
        ]
      },{
        "type": "powershell",
        "pause_before": "2h",
        "inline": [
          "Optimize-Volume -DriveLetter C -Defrag -Verbose"
        ]
      }
    ],
    "post-processors": [
      {
        "type": "vagrant",
        "only": ["hyperv"],
        "compression_level": 6,
        "output": "../../output/artifacts/{{user `service_name`}}-{{user `service_version`}}-hyperv.box",
        "vagrantfile_template": "../tpl.Vagrantfile"
      },
      {
        "type": "vagrant",
        "only": ["virtualbox"],
        "compression_level": 6,
        "output": "../../output/artifacts/{{user `service_name`}}-{{user `service_version`}}-virtualbox.box",
        "vagrantfile_template": "../tpl.Vagrantfile"
      }
    ]
}