file_client: local

fileserver_backend:
  - gitfs

gitfs_provider: gitpython

gitfs_remotes:
  - https://github.com/R0quef0rt/devbox.git:

gitfs_root: srv/salt

gitfs_saltenv:
  - dev:
    - ref: dev
  - prod:
    - ref: master

ext_pillar:
  - git:
    - dev https://github.com/R0quef0rt/devbox.git:
      - env: dev
    - master https://github.com/R0quef0rt/devbox.git:
      - env: prod