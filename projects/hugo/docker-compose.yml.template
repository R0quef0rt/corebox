version: '3'

services:
  {% for project in salt['pillar.get']('hugo:projects', '') %}
  {{project}}-webserver:
    image: roquefort/hugo:latest
    build: .
    ports:
      - 13{{ loop.index }}3:1313
    volumes:
      - ./src/{{project}}:/src
      - ./output/{{project}}:/output
    environment:
      HUGO_WATCH: "true"
      HUGO_REFRESH_TIME: 15
  {% endfor %}