      "output_directory": "C:\\Packer\\temp"
    }],
    "provisioners": [
    ],
    "post-processors": [
      {
        "type": "vagrant",
        "only": ["hyperv"],
        "compression_level": 6,
        "output": "{{template_dir}}/artifacts/{{user `service_name`}}-{{user `service_version`}}-hyperv.box",
        "vagrantfile_template": "{{template_dir}}/srv/tpl.Vagrantfile"
      },
      {
        "type": "vagrant",
        "only": ["virtualbox"],
        "compression_level": 6,
        "output": "{{template_dir}}/artifacts/{{user `service_name`}}-{{user `service_version`}}-virtualbox.box",
        "vagrantfile_template": "{{template_dir}}/srv/tpl.Vagrantfile"
