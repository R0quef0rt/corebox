{
    "min_packer_version": "0.12.0",
    "variables": {
      "service_name": "server2016",
      "region": "us-east-1",
      "service_version": "0.4.0",
      "env": "dev",
      "winrm_user": "Administrator",
      "winrm_password": "cdi@2468"
    },
    "builders": [{
      "name": "hyperv",
      "type": "hyperv-iso",
      "iso_url": "D:\\Windows_Server_2016_Datacenter_EVAL_en-us_14393_refresh.ISO",
      "iso_checksum_type": "md5",
      "iso_checksum": "70721288BBCDFE3239D8F8C0FAE55F1F",
      "cpu": "2",
      "ram_size": "4096",
      "enable_dynamic_memory": "true",
      "communicator": "winrm",
      "winrm_port": "5986",
      "winrm_use_ssl": "true",
      "winrm_use_ntlm": "true",
      "winrm_insecure": "true",
      "winrm_username": "{{user `winrm_user`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "shutdown_command": "C:/Windows/system32/sysprep/sysprep.exe /generalize /shutdown",
      "shutdown_timeout": "4h",
      "output_directory": "D:\\output"
    },
    {
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "iso_url": "./import/Windows_Server_2016_Datacenter_EVAL_en-us_14393_refresh.ISO",
      "iso_checksum_type": "md5",
      "iso_checksum": "70721288BBCDFE3239D8F8C0FAE55F1F",
      "guest_os_type": "Windows2016_64",
      "guest_additions_mode": "attach",
      "headless": "true",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "128" ],
        ["modifyvm", "{{.Name}}", "--cableconnected1", "on"]
      ],
      "communicator": "winrm",
      "winrm_port": "5986",
      "winrm_use_ssl": "true",
      "winrm_use_ntlm": "true",
      "winrm_insecure": "true",
      "winrm_username": "{{user `winrm_user`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "12h",
      "shutdown_command": "%WINDIR%\\system32\\sysprep\\sysprep.exe /unattend:A:\\Autounattend.xml /quiet /generalize /oobe /shutdown",
      "shutdown_timeout": "4h",
      "post_shutdown_delay": "2m",
      "output_directory": "./output/temp/",
      "floppy_files": [
        "srv/ci/packer/Windows/Server2016/Autounattend.xml",
        "srv/ci/ansible/ConfigureRemotingForAnsible.ps1",
        "srv/ci/packer/Windows/install-guest-additions.bat"
      ]
    }],
    "provisioners": [
      {
        "type": "salt-masterless",
        "salt_bin_dir": "C:\\salt",
        "temp_config_dir": "C:\\tmp",
        "local_state_tree": "srv/salt",
        "local_pillar_roots": "srv/pillar",
        "minion_config": "etc/salt/minion.windows",
        "guest_os_type": "windows",
        "bootstrap_args": "-version 2018.3.2 -pythonVersion 3 -runservice false -minion base",
        "salt_call_args": "--id=base",
        "no_exit_on_failure": "true"
      },{
        "type": "shell",
        "pause_before": "2h",
        "inline": [
          "echo test"
        ]
      }
    ],
    "post-processors": [
      {
        "type": "vagrant",
        "only": ["hyperv"],
        "compression_level": 6,
        "output": "./output/artifacts/{{user `service_name`}}-{{user `service_version`}}-hyperv.box",
        "vagrantfile_template": "./srv/salt/vagrant/files/tpl.Vagrantfile"
      },
      {
        "type": "vagrant",
        "only": ["virtualbox"],
        "compression_level": 6,
        "output": "./output/artifacts/{{user `service_name`}}-{{user `service_version`}}-virtualbox.box",
        "vagrantfile_template": "./srv/salt/vagrant/files/tpl.Vagrantfile"
      }
    ]
}