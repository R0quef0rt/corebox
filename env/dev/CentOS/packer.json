{
    "min_packer_version": "0.12.0",
    "variables": {
      "service_name": "{{env `SERVICE_NAME`}}",
      "region": "{{env `REGION`}}",
      "service_version": "{{env `SERVICE_VERSION`}}",
      "env": "{{env `ENV`}}"
    },
    "builders": [{
      "ami_name": "{{user `service_name`}}-{{user `service_version` | clean_ami_name}}",
      "ami_description": "An Ubuntu 18.04 AMI pre-installed with Salt and basic system configurations.",
      "instance_type": "t2.micro",
      "force_deregister": "false",
      "name": "{{user `service_name`}}",
      "region": "{{user `region`}}",
      "type": "amazon-ebs",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "*ubuntu-bionic-18.04-amd64-server-*",
          "block-device-mapping.volume-type": "gp2",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_username": "ubuntu"
    }],
    "provisioners": [{
      "type": "salt-masterless",
      "minion_config": "etc/salt/minion",
      "local_state_tree": "srv/salt",
      "bootstrap_args": "-i basebox -F -P -p python-git",
      "salt_call_args": "--id basebox saltenv=qa pillarenv=qa"
    }
  ]
}